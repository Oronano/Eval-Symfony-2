{# Details Article #}

{% if userRole.0 is same as "ROLE_ADMIN" and app.request.attributes.get('_route') == 'details_article' %}
<h2> Modifier l'article </h2>
  {{ form_start(form) }}
    {{ form_errors(form) }}
    <br>
    {{ form_row(form.titre) }}
    {{ form_row(form.auteur) }}
    {{ form_row(form.etat) }}
    {{ form_row(form.categorie) }}
    {{ form_row(form.submit) }}
{{ form_end(form) }}
    <br>
    <a href="{{ path('details_article', {'id': allarticles.id}) }}">Modifier</a>
    <a href="{{ path('delete_article', {'id': allarticles.id}) }}">Supprimer</a>
{% endif %}